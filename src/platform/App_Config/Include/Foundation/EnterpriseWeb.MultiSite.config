<?xml version="1.0"?>
<!--  Multi Site definition Environment Setting to scope the Site Defnition applicable to respective environment. 
This will be used for Preview website Site Definitions. -->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentManagement or ContentDelivery">
    <settings>
      <!--  Environment name used by site provider to specify host name for each site definition.
      The default value is LIVE.  -->
      <setting name="XA.Foundation.Multisite.Environment" value="$(env:Sitecore_AppSettings_env__define)" /> 
    </settings>
  </sitecore>
</configuration>
